@model WebStore.Domain.ViewModels.CatalogViewModel
<partial name="Partial/_Advertisement" />

<section>
    <div class="container">
        <vc:bread-crumbs />
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSideBar" />
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_FeaturesItems" model="Model.Products" />
                </div>
                <paging page-model="@Model.Page"
                        page-action="Shop"
                        page-url-sectionId="@Model.SectionId"
                        page-url-brandId="@Model.BrandId">

                </paging>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/lib/jquery-loading-overlay/loadingoverlay.js"></script>
    <script src="~/js/Catalog/CatalogLogic.js" asp-append-version="true"></script>
    <script>
        $(function () {
            Catalog.init({
                getViewLink: "@Url.Action("GetCatalogHTML", "Catalog")"
            });
        })
    </script>
}